<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}">
 
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
        </ContentPage.ToolbarItems>

        <VerticalStackLayout Spacing="10" Padding="10">
            <Label Text="Descrição do Produto:" TextColor="{StaticResource Primary}" BackgroundColor="White"/>
            <Entry x:Name="txt_descricao" BackgroundColor="White" Text="{Binding Descricao}"/>

            <Label Text="Quantidade:" TextColor="{StaticResource Primary}" BackgroundColor="White"/>
            <Entry x:Name="txt_quantidade" Keyboard="Numeric" BackgroundColor="White" Text="{Binding Quantidade}"/>

            <Label Text="Preço Unitário:" TextColor="{StaticResource Primary}" Background="White" />
            <Entry x:Name="txt_preco" Keyboard="Numeric" Background="White" Text="{Binding Preco}" />
        </VerticalStackLayout>
</ContentPage>